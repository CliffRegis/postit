<%= render 'shared/content_title', title: "#{@user.username}'s Profile" %>
<div class='well'>
  <dl class="dl-horizontal">
    <dt>Username: </dt>
    <dd><%= @user.username %></dd>
    <dt>Username: </dt>
    <dd><%= @user.username  %></dd>
  </dl>
</div>
<h5><%= @user.username %>'s Activity</h5> 
  <ul class="nav nav-tabs">
     <li class='<% "active" if params[:tab].nil? %>'>
      <%= link_to "posts (#{@user.posts.size})", user_path(@user) %>
     </li>
     <li class='<% "active" if params[:tab] == 'comments' %>'>
      <%= link_to "comment (#{@user.comments.size})", user_path(@user, tab: 'comments') %>
     </li>
  </ul>


<% if params[:tab].nil? %> 
  <% @user.posts.each do |post| %>
    <div class='span8 well'>
      <h4><%= link_to post.title, post_path(post) %></h4>
      <p><%= post.description %></p>
      <p>
        <span class='quiet'> created on </span> 
        <small> at <%= display_time(post.created_at) %></small>
      </p>
    </div>
  <%end%>
<% elsif %>
  <% @user.comments.each do |comment| %>
    <div class='span8 well'>
      <p><%= comment.body %></p>
      <p>
        <span class='quiet'> <%= link_to comment.post.title, post_path(comment.post) %> created on </span> 
        <small> at <%= display_time(comment.created_at) %></small>
      </p>
    </div>
  <%end%>
<%end%>




